// Padding around the divider to make it shorter & centered
Padding(
  padding: const EdgeInsets.only(left: 60, right: 60),
  child: Divider(
    thickness: 1,       // Divider line thickness
    color: Colors.white // Divider color
  ),
),

// Contact Card for Phone
Padding(
  padding: const EdgeInsets.only(top: 5, left: 20, right: 20),
  child: Container(
    height: 60,             // Height of the contact card
    color: Colors.white,    // White background card
    child: Row(             // Row = horizontal layout (icon + text)
      children: [
        SizedBox(width: 10), // Space before icon

        Icon(
          Icons.call,       // Phone icon
          color: Colors.teal,
          size: 30
        ),

        SizedBox(width: 10), // Space between icon & text

        Text(
          "123456789",      // Phone number
          style: TextStyle(
            fontSize: 20,
            color: Colors.teal
          )
        )
      ],
    )
  ),
),

// Contact Card for Email
Padding(
  padding: const EdgeInsets.only(top: 20, left: 20, right: 20),
  child: Container(
    height: 60,              // Card height
    color: Colors.white,     // White card background
    child: Row(
      children: [
        SizedBox(width: 10), // Space before icon

        Icon(
          Icons.email,       // Email icon
          color: Colors.teal,
          size: 30
        ),

        SizedBox(width: 10), // Space between icon & text

        Text(
          "praneeth@gmail.com",  // Email text
          style: TextStyle(
            fontSize: 20,
            color: Colors.teal
          )
        )
      ],
    )
  ),
),



